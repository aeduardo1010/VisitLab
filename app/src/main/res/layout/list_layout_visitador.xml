<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pic_visitador"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/cod_visitador"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/pic_visitador"
                android:textSize="7dp" />


            <TextView
                android:id="@+id/num_dni"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                android:layout_toEndOf="@+id/txt_citas_hechas"
                android:textSize="7dp" />


            <TextView
                android:id="@+id/ape_visitador"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:textSize="7dp"
                android:layout_below="@+id/cod_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/pic_visitador" />
            <TextView
                android:id="@+id/nom_visitador"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:textSize="7dp"
                android:layout_below="@+id/ape_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/pic_visitador" />

            <TextView
                android:id="@+id/mail_visitador"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:textSize="7dp"
                android:layout_below="@+id/nom_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/pic_visitador" />


            <TextView
                android:id="@+id/txt_citas_hechas"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_below="@+id/mail_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/pic_visitador"
                android:background="@drawable/squaregroundyellow"
                android:text="Citas Hechas"
                android:textSize="5pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/num_citas_hechas"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_below="@+id/mail_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/txt_citas_hechas"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/txt_citas_total"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_below="@+id/mail_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:background="@drawable/squaregroundyellow"
                android:layout_toEndOf="@+id/num_citas_hechas"
                android:text="Citas Totales"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/num_citas_total"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_below="@+id/mail_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/txt_citas_total"
                android:textSize="5pt" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>