<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#C3E8E5"
            android:layout_height="140dp"
            >

            <ImageView
                android:id="@+id/pic_visitador"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttonstyle" />

            <TextView
                android:id="@+id/txt_visitador"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/pic_visitador"
                android:background="@drawable/squaregroundblue_1"
                android:text="CODIGO"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cod_visitador"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/txt_visitador"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_dni"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/cod_visitador"
                android:background="@drawable/squaregroundblue_1"
                android:text="DNI"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/num_dni"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/txt_dni"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/ape_visitador"
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:layout_below="@+id/cod_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/pic_visitador"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/nom_visitador"
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:layout_below="@+id/ape_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/pic_visitador"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/mail_visitador"
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:textSize="14dp"
                android:layout_below="@+id/nom_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/pic_visitador" />


            <TextView
                android:id="@+id/txt_citas_hechas"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_below="@+id/mail_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/pic_visitador"
                android:background="@drawable/squaregroundyellow"
                android:text="Citas Hechas"
                android:textAlignment="center"
                android:textSize="6pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/num_citas_hechas"
                android:layout_width="25dp"
                android:textAlignment="center"
                android:layout_height="20dp"
                android:layout_below="@+id/mail_visitador"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/txt_citas_hechas"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_citas_total"
                android:textAlignment="center"
                android:layout_width="75dp"
                android:layout_height="20dp"
                android:layout_below="@+id/mail_visitador"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/num_citas_hechas"
                android:background="@drawable/squaregroundyellow"
                android:text="Citas Totales"
                android:textSize="6pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/num_citas_total"
                android:layout_width="25dp"
                android:textAlignment="center"
                android:layout_height="20dp"
                android:layout_below="@+id/mail_visitador"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/txt_citas_total"
                android:textSize="12dp" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>