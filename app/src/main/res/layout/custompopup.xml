<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="490dp"
    android:background="@color/bluedark"
    android:padding="5dp"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/textclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/crema"
        android:text="X"
        android:textColorHighlight="@color/crema"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/circlebackgroundwhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/avatar"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maria Espinoza"
            android:textStyle="bold"
            android:textColor="@color/crema"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lima, PerÃº"
            android:textColor="@color/crema"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/orange"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textSize="18sp"
                    android:textColor="@color/crema"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visitas realizadas"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/crema"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/green"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textSize="18sp"
                    android:textColor="@color/crema"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visitas pendientes"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/crema"/>


            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/blue_1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textSize="18sp"
                    android:textColor="@color/crema"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visitas totales"
                    android:textSize="15sp"
                    android:textColor="@color/crema"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonstyle"
        android:text="Cambiar Foto"
        android:textColor="@color/bluedark" />
</LinearLayout>