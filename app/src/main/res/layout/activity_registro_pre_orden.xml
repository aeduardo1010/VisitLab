<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".preorden.RegistroPreOrdenActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Registro de Pre-Orden"
        android:textSize="24sp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:orientation="vertical"
        android:gravity="center"/>

    <Spinner
        android:id="@+id/idSpinnerPOTipoVisita"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/idDescripcionPO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="20dp"
        android:gravity="left"
        android:hint="DescripciÃ³n de orden"
        android:inputType="text"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/idSpinnerPOLaboratorios"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnGuardarPreOrden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Guardar"
        android:textSize="20dp" />
</LinearLayout>