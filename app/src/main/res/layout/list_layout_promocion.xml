<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#C3E8E5"
            android:layout_height="140dp"
            >

            <ImageView
                android:id="@+id/pic_promocion"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonstyle"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/txt_promocion"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/pic_promocion"
                android:background="@drawable/squaregroundblue_1"
                android:text="ID PROM"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cod_promocion"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/txt_promocion"
                android:text="COD"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/descripcion"
                android:layout_width="222dp"
                android:layout_height="90dp"
                android:layout_below="@+id/cod_promocion"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/pic_promocion"
                android:textSize="14dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>