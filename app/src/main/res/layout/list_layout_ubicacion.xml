<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#C3E8E5"
            android:layout_height="140dp"
            >


            <TextView
                android:id="@+id/txt_visitador"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/squaregroundblue_1"
                android:text="CODIGO"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cod_visitador"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/txt_visitador"
                android:text="COD"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_dni"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/cod_visitador"
                android:background="@drawable/squaregroundblue_1"
                android:text="DNI"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/num_dni"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/txt_dni"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/ubi_x"
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:layout_below="@+id/cod_visitador"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/ubi_y"
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:layout_below="@+id/ubi_x"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:layout_below="@+id/ubi_y"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/hora"
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:layout_below="@+id/fecha"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:textSize="14dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>